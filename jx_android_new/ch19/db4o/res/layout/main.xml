<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="写数据" android:onClick="onClick_WriteData"/>
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="查询所有数据" android:onClick="onClick_QueryAllData"/>
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="查询指定数据" android:onClick="onClick_QueryData"/>
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="更新指定的Student对象" android:onClick="onClick_UpdateData"/>
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="删除指定的Student对象" android:onClick="onClick_DeleteData"/>

</LinearLayout>
